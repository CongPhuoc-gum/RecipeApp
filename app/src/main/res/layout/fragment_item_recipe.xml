<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    tools:context=".fragment.item_recipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Horizontal LinearLayout for Edit and Delete Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <!-- Delete Button on the Right -->
            <ImageButton
                android:id="@+id/btnDeleteCard"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete"
                android:background="@null"/>
        </LinearLayout>

        <!-- Image -->
        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/img_taocongthuc"
            android:contentDescription="Recipe Image"
            android:scaleType="fitCenter" />

        <!-- Recipe Name -->
        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bánh Mì Việt Nam"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Recipe Description -->
        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bánh Mì là món ăn truyền thống của người Việt"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Recipe Country -->
        <TextView
            android:id="@+id/recipe_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Việt Nam"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Recipe Username -->
        <TextView
            android:id="@+id/recipe_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người đăng: John Doe"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
